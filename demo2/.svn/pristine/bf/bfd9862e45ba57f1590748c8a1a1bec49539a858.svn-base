#Compilation Variables
CFLAGS = -Wall -pedantic -std=c99

all:2310dealer 2310A

# Dealer executable.
2310dealer:main.o
		gcc $(CFLAGS) main.o -g -o 2310dealer

# A executable.
2310A:player.o messages.o
		gcc $(CFLAGS) player.o messages.o -g -o 2310A

# Main Object File
main.o:main.c
		gcc $(CFLAGS) -c main.c -o main.o

# The Player file.
player.o:player.c
		gcc $(CFLAGS) -c player.c -o player.o

# The Message file.
messages.o:messages.c
		gcc $(CFLAGS) -c messages.c -o messages.o

clean:
		rm 2310dealer 2310A
		rm main.o player.o messages.o