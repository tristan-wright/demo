#Compilation Variables
CFLAGS = -Wall -pedantic -std=c99

all:2310dealer 2310A 2310B

# Dealer executable.
2310dealer:main.o
		gcc $(CFLAGS) main.o -g -o 2310dealer

# A executable.
2310A:player.o board.o a.o
		gcc $(CFLAGS) player.o board.o a.o -g -o 2310A

# B executable.
2310B:player.o board.o b.o
		gcc $(CFLAGS) player.o board.o b.o -g -o 2310B

# Main Object File
main.o:main.c
		gcc $(CFLAGS) -c -g main.c -o main.o

# The Player file.
player.o:player.c
		gcc $(CFLAGS) -c -g player.c -o player.o

# The Message file.
board.o:board.c
		gcc $(CFLAGS) -c -g board.c -o board.o

# The A player logic.
a.o:a.c
	gcc $(CFLAGS) -c -g a.c -o a.o

# The B player logic.
b.o:b.c
	gcc $(CFLAGS) -c -g b.c -o b.o

clean:
		rm 2310dealer 2310A 2310B
		rm main.o player.o board.o a.o b.o